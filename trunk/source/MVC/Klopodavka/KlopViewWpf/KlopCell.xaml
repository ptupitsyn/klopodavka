<Button x:Class="KlopViewWpf.KlopCell" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
    <Button.Resources>
        <ResourceDictionary Source="Themes\Generic.xaml" />
    </Button.Resources>
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}">
                <Border Background="{TemplateBinding Foreground}">
                </Border>
            </Border>
        </ControlTemplate>
    </Button.Template>
</Button>