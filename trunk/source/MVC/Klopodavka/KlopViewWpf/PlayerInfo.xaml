<UserControl x:Class="KlopViewWpf.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:KlopViewWpf="clr-namespace:KlopViewWpf" mc:Ignorable="d" x:Name="controlRoot" >
    <UserControl.Resources>
        <KlopViewWpf:ColorToKlopBrushConverter x:Key="_colorToKlopBrushConverter" />
    </UserControl.Resources>
    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="8">
        <!-- Player Name & Picture -->
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding ElementName=controlRoot, Path=Player.Name}" FontSize="15" Margin="10" HorizontalAlignment="Center" />
            <Border Height="100" Width="100" Margin="10"
                    Background="{Binding ElementName=controlRoot, Path=Player.Color, Converter={StaticResource _colorToKlopBrushConverter}}" />
        </StackPanel>
    </Border>
</UserControl>
